<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RootDetection" parent="Theme.Material3.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RootDetection.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RootDetection.AppBarOverlay" parent="ThemeOverlay.Material3.ActionBar" />

    <style name="Theme.RootDetection.PopupOverlay" parent="ThemeOverlay.Material3" />
    
    <!-- Security Status Styles -->
    <style name="SecurityStatus.Success">
        <item name="android:textColor">@color/status_success</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="SecurityStatus.Warning">
        <item name="android:textColor">@color/status_warning</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="SecurityStatus.Error">
        <item name="android:textColor">@color/status_error</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="SecurityStatus.Info">
        <item name="android:textColor">@color/status_info</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <!-- Card Styles -->
    <style name="SecurityCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="SecurityButton.Primary" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    
    <style name="SecurityButton.Secondary" parent="Widget.Material3.Button.TonalButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    
    <style name="SecurityButton.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    
</resources>
